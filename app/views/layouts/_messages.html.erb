<% if flash.any? %>
  <% flash.each do |name, msg| %>
    <% name_conversion = (name == "alert" ? "danger" : "success") %>
    <div class="alert alert-<%= name_conversion %> alert-dismissible fade show" role="alert">
      <%= render '/layouts/symbol_image', name_conversion: name_conversion %>
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>

